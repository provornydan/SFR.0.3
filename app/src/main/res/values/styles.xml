<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ActionBar.Solid.MyAppTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#A32369</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:gravity">bottom|end</item>
    </style>


    <style name="ActionBar.Solid.MyAppTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/actionbar</item>
        <item name="icon">@android:color/transparent</item>
        <item name="height">70dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="titleTextStyle">@style/ActionBar.Solid.Ribbit.TitleTextStyle</item>
    </style>

    <style name="ActionBar.Solid.Ribbit.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
        <item name="android:label">My SFRs</item>
        <item name="android:textSize">35sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:elegantTextHeight">false</item>
        <item name="android:paddingLeft">50dp</item>
    </style>

    <style name="MainStyle">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#A32369</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="style0">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">normal</item>
    </style>


</resources>
